{
	"name": "vite-sveltekit-motoko",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"setup": "npm i && npm run init-ii && dfx deploy backend && dfx deps deploy",
		"init-ii": "dfx deps pull && dfx deps init internet_identity --argument '(null)'",
		"upload_canisters": "tsx ./upload-wasm.mts",
		"start": "run-p frontend backend",
		"frontend": "vite --host",
		"backend": "mo-dev --generate --deploy -y",
		"build": "vite build",
		"pretest": "dfx generate backend",
		"test": "run-s test:e2e test:unit",
		"test:e2e": "vitest run",
		"test:unit": "mops test",
		"format": "prettier --write .",
		"sources": "mops sources",
		"postinstall": "mops install",
		"dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@dfinity/agent": "^1.0.1",
		"@dfinity/auth-client": "^1.0.1",
		"@dfinity/candid": "^1.0.1",
		"@dfinity/identity-secp256k1": "^1.0.1",
		"@dfinity/principal": "^1.0.1",
		"@hadronous/pic": "^0.6.0",
		"@skeletonlabs/skeleton": "^2.9.0",
		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/identicon.js": "^2.3.4",
		"@types/node": "^20.11.26",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.4.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"identicon.js": "^2.3.3",
		"mo-dev": "^0.11.2",
		"npm-run-all": "^4.1.5",
		"pem-file": "^1.0.1",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.2.4",
		"prettier-plugin-motoko": "^0.8.2",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"sass": "^1.70.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.4.1",
		"tsx": "^4.7.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-plugin-environment": "^1.1.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@dfinity/utils": "^2.1.2"
	}
